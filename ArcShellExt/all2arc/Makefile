################################################################################

CFLAGS = -Wall -s -Os
PROG_1 = all2arc
CC = g++

all: $(PROG_1)

################################################################################
$(PROG_1): $(PROG_1).cpp
	$(CC) $(CFLAGS) -mwindows -o $(PROG_1) $(PROG_1).cpp
	
debug: $(PROG_1).cpp
	$(CC) $(CFLAGS) -DDEBUG -o $(PROG_1) $(PROG_1).cpp

################################################################################

clean:
	del /s $(PROG_1).exe *.o *~

################################################################################

pack:
	FreeArc.exe create all2arc.arc all2arc.exe all2arc.cpp Makefile

################################################################################
